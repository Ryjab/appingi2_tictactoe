<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game">

    <TextView
            android:text="Player turn :"
            android:layout_width="85dp"
            android:layout_height="23dp"
            android:id="@+id/activity_game_text_playerturnX" android:textSize="14sp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/activity_game_text_guest"
            android:layout_marginRight="8dp" tools:layout_editor_absoluteY="25dp"
            app:layout_constraintHorizontal_bias="0.567"/>
    <TextView
            android:text="Player turn :"
            android:layout_width="85dp"
            android:layout_height="24dp"
            android:id="@+id/activity_game_text_playerturn0"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/activity_game_text_playerturnX"
            android:textSize="14sp" android:layout_marginEnd="40dp"
            app:layout_constraintEnd_toStartOf="@+id/activity_game_text_joueur"
            android:layout_marginRight="40dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.9" android:visibility="invisible"/>
    <TextView
            android:text="X (Guest)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_text_guest" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="92dp" android:layout_marginRight="92dp" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="@+id/activity_game_text_playerturnX"
            app:layout_constraintTop_toTopOf="@+id/activity_game_text_playerturnX"/>
    <TextView
            android:text="O (Name)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_game_text_joueur" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="88dp" android:layout_marginRight="88dp"
            app:layout_constraintBottom_toBottomOf="@+id/activity_game_text_playerturn0" android:textSize="24sp"
            android:textStyle="bold" android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="@+id/activity_game_text_playerturn0"
            app:layout_constraintVertical_bias="1.0"/>
    <View
            android:id="@+id/divider"
            android:layout_width="368dp"
            android:layout_height="7dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:background="@android:color/holo_purple"
            android:layout_marginTop="252dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="367dp"
            android:layout_height="6dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="172dp" tools:background="@android:color/holo_purple"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="5dp"
            android:layout_height="237dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="124dp"
            android:layout_marginStart="124dp" tools:background="@android:color/holo_purple"
            android:layout_marginTop="180dp" app:layout_constraintTop_toTopOf="parent"/>
