            android:id="@+id/divider6"
            android:layout_width="5dp"
            android:layout_height="237dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="244dp"
            android:layout_marginStart="244dp" tools:background="@android:color/holo_purple"
            app:layout_constraintTop_toTopOf="@+id/divider3"
    />
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_1-1" app:layout_constraintStart_toStartOf="@+id/divider"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/divider3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.615" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_1-2" app:layout_constraintStart_toEndOf="@+id/divider3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintEnd_toStartOf="@+id/divider6"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:background="@color/colorAccent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_1-3" app:layout_constraintStart_toEndOf="@+id/divider6"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/divider" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/divider6" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_2-1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toStartOf="@+id/divider"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/divider3" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_2-2" app:layout_constraintStart_toEndOf="@+id/divider3"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintEnd_toStartOf="@+id/divider6"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_2-3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider" app:layout_constraintStart_toEndOf="@+id/divider6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/divider2" app:layout_constraintEnd_toEndOf="@+id/divider"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_3-1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintEnd_toStartOf="@+id/divider3"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/divider3" app:layout_constraintStart_toStartOf="@+id/divider"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_3-2" app:layout_constraintStart_toEndOf="@+id/divider3"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toStartOf="@+id/divider6" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/divider3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:background="@color/colorAccent"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/activity_game_3-3" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" app:layout_constraintStart_toEndOf="@+id/divider6"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/divider" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/divider6" android:background="@color/colorAccent"/>
